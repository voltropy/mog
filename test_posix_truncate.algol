# Test POSIX truncate and ftruncate operations
fn main() -> i64 {
  fd: i64 = open("test_truncate.txt", O_CREAT | O_WRONLY, 0644);

  if (fd == -1) {
    return 1;
  }

  write(fd, "This is test data for truncate", 30);
  close(fd);

  fd = open("test_truncate.txt", O_WRONLY, 0);

  if (fd == -1) {
    unlink("test_truncate.txt");
    return 2;
  }

  result: i64 = ftruncate(fd, 10);

  if (result == -1) {
    close(fd);
    unlink("test_truncate.txt");
    return 3;
  }

  close(fd);

  result = truncate("test_truncate.txt", 20);

  if (result == -1) {
    unlink("test_truncate.txt");
    return 4;
  }

  unlink("test_truncate.txt");

  return 0;
}