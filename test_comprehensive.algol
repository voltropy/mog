BEGIN
  # Test variable declarations and arithmetic
  x: i64 = 10;
  y: i64 = 20;
  z: i64 = x + y;

  # Test if statements
  IF x < y THEN
    z := z * 2;
  FI;

  # Test while loops
  i: i64 = 0;
  WHILE i < 5 DO
    i := i + 1;
  OD;

  # Test functions
  FUNCTION add(a: i64, b: i64) -> i64
    RETURN a + b;
  END;

  FUNCTION factorial(n: i64) -> i64
    IF n = 0 THEN
      RETURN 1;
    FI;
    RETURN n * factorial(n - 1);
  END;

  # Test function calls
  result: i64 = add(100, 200);
  fib_result: i64 = factorial(5);

  # Test modulo
  mod_result: i64 = 17 % 5;
END